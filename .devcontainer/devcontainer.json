{
    "name": "linkystat-dev",
    "workspaceFolder": "/app",
    "service": "linky2db",

    "dockerComposeFile": [
        "../compose.yaml",
        "../compose.dev.yaml"
    ],

    "forwardPorts": [
        "grafana:3000",
        "mysql:3306"
    ],

    "mounts": [
        "type=bind,source=${localEnv:USERPROFILE}\\.ssh,target=/root/.ssh,readonly"
    ],

    "shutdownAction": "stopCompose",  
    "initializeCommand": [".devcontainer/initializeCommand"],
    "postStartCommand": "/app/scripts/sync_dev_db.sh",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest",
            "moby": false,
            "dockerDashComposeVersion": "v2"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "procps,iputils-ping,openssh-client"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.analysis.autoImportCompletions": true,
                "editor.defaultFormatter": "ms-python.black-formatter",
                "editor.insertSpaces": true,
                "editor.tabSize": 4,
                "editor.detectIndentation": false,
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.sortImports": "explicit"
                    }
                },
                "black-formatter.args": [
                    "--line-length=200",
                    "--skip-magic-trailing-comma"
                ]
            },
            "extensions": [
                "eamodio.gitlens",
                "ms-python.autopep8",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy"            
            ]
        }
    }
}